@import 'ical_definitions';

/*******************************************************************************
** BODY
*******************************************************************************/

body {position: relative;}
#wrapper {
  margin: 20px auto 0;
  box-shadow: 0 10px 40px $gray;
  width: 788px;
  border-radius: $topRadius $bottomRadius;
}

/*******************************************************************************
** CALENDAR HEADER
*******************************************************************************/

#header {
  position: relative;
  height: 120px;
  background: url(<%= asset_path 'bg.png' %>) repeat-x;
  border-radius: $topRadius 0 0;
  border-top: 1px solid $headerTextLight;
}

#today {
  position: absolute;
  top: 16px;
  left: 0;
  color: $headerText;
  text-shadow: 1px 1px 1px $headerTextLight;
  font-size: 50px;
  line-height: 50px;
  text-align: center;
  font-weight: bold;

  p {
    font-size: 20px;
    line-height: 20px;
    text-align: center;
  }
}

#year {
  cursor: pointer;
  margin-top: 20px;
  color: $headerText;
  text-shadow: 1px 1px 1px $headerTextLight;
  font-weight: bold;
  font-size: 60px;
  line-height: 60px;
  text-align: center;
}

#years {
  position: absolute;
  display: none;
  top: 84px;
  left: 308px;
  padding: 20px;
  list-style: none;
  z-index: 100;
  border: 1px solid $headerText;
  background: $white;
  box-shadow: 0 7px 10px $shadow;

  &:before {
    position: absolute;
    top: -10px;
    left: 5px;
    content: '';
    display: inline-block;
    border-left: 10px solid transparent;
    border-right: 10px solid transparent;
    border-bottom: 10px solid transparent;
    border-bottom-color: $headerText;
  }
  a {font-size: 20px;}
}

#user_box {
  position: absolute;
  top: 28px;
  right: 20px;

  div {
    border: 1px solid rgba(black, 0.4);
    border-radius: 5px;
    padding: 5px;
    background: rgba(black, 0.2);
    color: $headerText;
    box-shadow: inset 0 6px 10px rgba(black, 0.45);
    text-align: right;
  }
  a {color: $headerText;}
}
.nav-tabs > .active > a, .nav-tabs > .active > a:hover {background-color: white !important;}
        
/*******************************************************************************
** CALENDAR BODY
*******************************************************************************/

#body {
  position: relative;
  @include gradient(top, $gray 0px, $white 7px);
  width: 768px;
  border-radius: 0 0 $bottomRadius;
  padding: 20px 10px 0;
  min-height: 440px;
}

.row {margin-bottom: 20px;}

.caption th {
  padding: 4px;
  background: $monthCaptionBackground;
  text-align: left;
  font-weight: bold;
  font-size: 16px;
  color: $shadow;
  border-right: 1px solid $tableBorder;
}

.month {
  border-top: 1px solid $tableBorder;
  border-left: 1px solid $tableBorder;

  td {
    border: 1px solid $tableBorder;
    border-top: 0;
    border-left: 0;
    color: $day;
    text-align: center;
  }
  td.current {
    font-weight: bold;
    color: $daySelected;
  }
  td.day:hover {
    @include gradient(top, $monthCaptionBackgroundSelected, $monthCaptionBackgroundSelectedTo);
    color: $white;
    cursor: pointer;
  }
}

.weekdays {
  border-right: 1px solid $tableBorder;

  th {
    color: $weekDay;
    background: $monthCaptionBackground;
    font-weight: normal;
    font-size: 11px;
    border-bottom: 1px solid $tableBorder;
  }
}

.current {
  .caption th {
    @include gradient(top, $monthCaptionBackgroundSelected, $monthCaptionBackgroundSelectedTo);
    color: $white;
  }
  .weekdays th {
    background: $monthCaptionBackgroundSelectedTo;
    color: $white;
  }
}

.tooltip {margin-top: -19px !important;}

/*******************************************************************************
** CALENDAR LEGEND
*******************************************************************************/

#legend {
  position: absolute;
  top: 100px;
  left: -190px;
  width: 150px;
  padding: 15px 20px;
  border-radius: 14px 0 0 14px;
  background: $white;
  z-index: -1;
  box-shadow: 0 10px 40px $gray;

  p {margin: 5px 0;}
  span {margin-right: 5px;}
}
.badge {
  padding: 9px;
  vertical-align: middle;
}

/*******************************************************************************
** COLLAPSABLE FORM TO MANAGE EVENTS
*******************************************************************************/

#replace {
  position: absolute;
  display: none;
  padding: 10px;
  width: 440px;
  overflow: hidden;
  top: 0;
  left: 163px;
  border: 1px solid $headerText;
  border-top: 0;
  @include gradient(top, $gray 0px, $white 7px);
  box-shadow: 0 7px 10px $shadow;
}

#input {
  float: left;
  width: 290px;
  padding: 10px;
  border-right: 1px solid $tableBorder;
}
textarea, #replace select {width: 270px;}

#buttons {
  float: right;
  width: 100px;
  padding: 10px;

  button {
    width: 100px;
    height: 40px;
    margin-bottom: 15px !important;
  }
}
