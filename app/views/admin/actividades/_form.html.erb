<%= form_for([:admin, @actividad], :html => {:class => 'form-horizontal'}) do |f| %>
  <%= errores @actividad %>

  <div class="control-group">
    <%= f.label :nombre, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nombre %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :color, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :color %>
    </div>
  </div>

  <div class="form-actions">
    <%= submit_tag 'Save', :class => 'btn btn-primary' %>
    <%= link_to 'Cancel', admin_actividades_path, :class => 'btn' %>
  </div>
<% end %>