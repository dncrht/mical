<%= messages_bar %>

<p>
  <%= link_to 'New activity', new_admin_activity_path, :class => 'btn btn-default btn-lg' %>
</p>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Color</th>
      <th>Position</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @activities.each do |i| %>
      <tr>
        <td><%= link_to i.name, edit_admin_activity_path(i.id) %></td>
        <td><span class="uneditable-input" style="background:<%= i.color %>"><%= i.color %></span></td>
        <td><%= i.position %></td>
        <td><%= link_to 'Delete', admin_activity_path(i), :class => 'btn btn-danger', :data => {:confirm => "Clicking 'Yes' will delete activity #{i.name}. Are you sure?"}, :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
