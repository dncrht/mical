<%= render '/admin/alert-message' %>

<p>
  <%= link_to 'New activity', new_admin_activity_path, :class => 'btn btn-large' %>
</p>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Color</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @activities.each do |i| %>
      <tr>
        <td><%= link_to i.name, edit_admin_activity_path(i.id) %></td>
        <td><%= i.color %></td>
        <td><%= link_to 'Delete', admin_activity_path(i), :class => 'btn btn-danger', :confirm => "Clicking 'Yes' will delete activity #{i.name}. Are you sure?", :method => :delete, :remote => true %></td>
      </tr>
    <% end %>
  </tbody>
</table>