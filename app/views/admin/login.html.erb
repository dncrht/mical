<% content_for :header do %>
  <p id="year">Login</p>

  <div id="logged_as" class="span3">
    <div>
      Welcome, <strong><%= @logged_as.email %></strong><br>
      <%= link_to 'Back to calendar', root_path %>
    </div>
  </div>
<% end %>

<% content_for :body do %>
  <%= form_tag login_path, :method => :post do %>

    <% unless notice.blank? %>
      <div class="alert alert-error"><%= notice %></div>
    <% end %>

    <%= label_tag :email %>
    <%= text_field_tag :email %>

    <%= label_tag :password %>
    <%= password_field_tag :password %>

    <div class="form-actions">
      <%= submit_tag 'Log me in!', :class => 'btn btn-primary' %>
    </div>

  <% end %>
<% end %>
