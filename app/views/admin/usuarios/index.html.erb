<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<%= link_to 'new user', new_admin_usuario_path %>

<table>
  <tr>
    <th>Email</th>
    <th>Can I edit events?</th>
    <th>Can I modify days?</th>
    <th>Can I see the legend?</th>
    <th>Can I see the description?</th>
    <th>Can I export to CSV?</th>
    <th></th>
  </tr>
  <% @usuarios.each do |u| %>
    <tr>
      <td><%= link_to u.email, edit_admin_usuario_path(u.id) %></td>
      <td><%= u.can_edit_actividad %></td>
      <td><%= u.can_edit_efemeride %></td>
      <td><%= u.can_see_leyenda %></td>
      <td><%= u.can_see_resumen %></td>
      <td><%= u.can_download %></td>
      <td>
        <%= form_tag(admin_usuario_path(u.id), :method => :delete) do |f| %>
          <%= submit_tag 'borrar', :confirm => "Clicking 'Yes' will delete user #{u.email}. Are you sure?" %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>