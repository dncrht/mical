$('.js-form').html('<%= escape_javascript render('form') %>');

ReactDOM.render(
  Applet(RatingApplet, {rating: <%= @event.rating.to_i %>, prevRating: <%= @event.rating.to_i %>, top: <%= Event::TOP %>}),
  document.getElementById('js-rating')
);

<% unless @event.new_record? %>
  ReactDOM.render(
    React.createElement(PhotosApplet, {photos: <%= raw @photos.to_json %>, url: "<%= photos_path(event_id: @event.id) %>"}),
    document.getElementById('js-photos')
  );
<% end %>
