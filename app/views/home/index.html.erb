<div id="centrador">
  <p id="logged_as">
    Welcome, <%= @logged_as.email %>.
    <% if @logged_as.email == 'guest' %>
      <a href="/admin/usuarios">Log in</a>
    <% else %>
      <%= link_to 'Logout', logout_path %>
    <% end %>
  </p>

  <div id="cabecera">
    <h1>
      <%= @hoy %>
    </h1>
    <h5></h5>
    <%= form_tag replace_path, :method => :post do %>
      <%= hidden_field_tag :hoy %>
    <% end %>
    <%= form_tag root_path, :method => :get do %>
      <%= select_tag :anyo, options_for_select(@años, @año), :onchange => 'submit();' %>
    <% end %>
  </div>

  <div id="cuerpo" class="clearfix">
    <%= pintar_calendario %>
  </div>
</div>
