<% content_for :header_day do %>
  <div id="today" class="span3 header-day" data-day="<%= @today.day %>" data-month="<%= l(@today, :format => :month) %>">
    <%= @today.day %>
    <p class="header-month"><%= l(@today, :format => :month) %></p>
  </div>
<% end %>

<% content_for :header_year do %>
  <p class="header-year js-year-selection"><%= @year %></p>
  <ul class="span1 header-years-dropdown">
    <% @years.to_a.reverse.each do |year| %>
      <li><h3><%= link_to year, year_path(year) %></h3></li>
    <% end %>
  </ul>
<% end %>

<%= (1..12).to_a.in_groups_of(4) do |months| %>
  <div class="row">
    <% months.each do |month| %>
      <%= print_month @year, month %>
    <% end %>
  </div>
<% end %>

<% if signed_in? && current_user.can_see_legend %>
  <div class="legend">
    <% @activities.each do |i| %>
      <p><span class="badge activity<%= i.id %>"> </span><%= i.name %></p>
    <% end %>
  </div>
<% end %>

<% if signed_in? && current_user.can_edit_event %>
  <div class="event-form js-form">
    <%= form_tag action_path, :method => :put do %>
      <div class="event-form-inputs">
        <%= label_tag :activity_id %>
        <%= select_tag :activity_id, options_from_collection_for_select(@activities, :id, :name) %>

        <%= label_tag :description %>
        <%= text_area_tag :description %>

        <%= hidden_field_tag :day %>
      </div>
      <div class="event-form-buttons">
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="button" class="btn js-cancel">Cancel</button>
        <button type="button" class="btn btn-danger js-delete">Delete</button>
      </div>
    <% end %>
  </div>
<% end %>

<% content_for :footer do %>
  <% if signed_in? && current_user.can_download %>
    <div class="row">
      <div class="span4">
        <%= link_to 'â†¯ Download as .csv', "#@year.csv" %>
      </div>
    </div>
  <% end %>
<% end %>
