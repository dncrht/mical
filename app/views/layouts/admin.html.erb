<% content_for :header do %>
  <p id="year">Admin</p>

  <div id="logged_as" class="span3">
    <div>
      Welcome, <strong><%= current_user.email %></strong><br>
      <%= link_to 'Back to calendar', root_path %>
      <%= link_to 'Logout', sign_out_path, :method => :delete %>
    </div>
  </div>
<% end %>

<% content_for :body do %>
  <ul class="nav nav-tabs">
    <li class="<%= ((@tab.nil?) ? 'active' : nil) %>"><%= link_to 'Information', admin_path %></li>
    <% if current_user.is_admin %>
      <li class="<%= ((@tab == :users) ? 'active' : nil) %>"><%= link_to 'Users', admin_users_path %></li>
    <% end %>
    <li class="<%= ((@tab == :activities) ? 'active' : nil) %>"><%= link_to 'Activities', admin_activities_path %></li>
  </ul>

  <%= yield %>
<% end %>

<%= render :template => 'layouts/application' %>