<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>iCal - Administration</title>
    <%= stylesheet_link_tag 'reset', 'admin' %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <div id="centerer">
      <p id="logged_as">
        Welcome, <strong><%= @logged_as.email %></strong> |
        <%= link_to 'Back to calendar', root_path %> |
        <%= link_to 'Logout', logout_path %>
      </p>

      <ul class="tabrow">
        <li class="<%= ((@tab.nil?) ? 'selected' : nil) %>"><%= link_to 'Information', admin_path %></li>
        <% if @logged_as.email == 'admin' %>
          <li class="<%= ((@tab == :users) ? 'selected' : nil) %>"><%= link_to 'Users', admin_usuarios_path %></li>
        <% end %>
        <li class="<%= ((@tab == :activities) ? 'selected' : nil) %>"><%= link_to 'Activities', admin_actividades_path %></li>
      </ul>

      <div id="content">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
