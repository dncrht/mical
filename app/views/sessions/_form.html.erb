<%= form_for :session, url: session_path, html: {class: 'col-sm-4 col-sm-offset-4'} do |f| %>

  <% unless notice.blank? %>
    <div class="alert alert-danger"><%= notice %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>
  </div>

  <%= f.submit 'Log me in!', :class => 'btn btn-primary' %>

<% end %>
