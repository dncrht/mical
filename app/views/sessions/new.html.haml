- content_for :header_day do
  .col-sm-3

- content_for :header_year do
  .col-sm-6
    %span.header-year Login

= form_with scope: :session, url: session_path, class: 'col-sm-4 col-sm-offset-4' do |f|

  - unless notice.blank?
    .alert.alert-danger= notice

  .form-group
    = f.label :email
    = f.text_field :email, class: 'form-control'

  .form-group
    = f.label :password
    = f.password_field :password, class: 'form-control'

  = f.submit 'Log me in!', class: 'btn btn-primary'
